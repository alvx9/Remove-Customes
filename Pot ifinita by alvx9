[ENABLE]
//code from here to '[DISABLE]' will be used to enable the cheat

// creditos para alvx9
alloc(newmem,2048)
label(return)
label(originalcode)
label(incc)
label(dissi)
label(aboli)
label(aben)

newmem:
cmp byte ptr[ebx+40],(int)25 // se não for do type 25 então saida do código
jne originalcode
pushad
push ebx // poe ebx na topo da pilha
movzx ebx,byte ptr[ebx+41] // compara os typeids onde type é = 25
cmp ebx,(int)68 // medicinal
pop ebx
popad
je incc // incrementa 255
jmp dissi


//dissipadora
dissi:
pushad
push ebx
movzx ebx,byte ptr[ebx+41]
cmp ebx,(int)69
pop ebx
popad
je incc
jmp aboli

//abolidora
aboli:
pushad
push ebx
movzx ebx,byte ptr[ebx+41]
cmp ebx,(int)70
pop ebx
popad
je incc
jmp aben


//abençoada
aben:
pushad
push ebx
movzx ebx,byte ptr[ebx+41]
cmp ebx,(int)71
pop ebx
popad
je incc
jmp sagrada

//sagrada
sagrada:
pushad
push ebx
movzx ebx,byte ptr[ebx+41]
cmp ebx,(int)72
pop ebx
popad
je incc
jmp originalcode

originalcode:
mov [ebx+42],al
mov eax,00000702
jmp return

incc:
mov [ebx+42],(int)255
jmp return


"ps_game.exe"+72ACF:
jmp newmem
nop
nop
nop
return:


 
 
[DISABLE]
//code from here till the end of the code will be used to disable the cheat
dealloc(newmem)
"ps_game.exe"+72ACF:
mov [ebx+42],al
mov eax,00000702
